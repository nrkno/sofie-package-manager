{
    "name": "@single-app/app",
    "version": "1.37.0-alpha.1",
    "description": "Package Manager, http-proxy etc.. all in one application",
    "private": true,
    "scripts": {
        "build": "rimraf dist && yarn build:main",
        "build:main": "tsc -p tsconfig.json",
        "build-win32": "mkdir deploy & node ../../../scripts/build-win32.js package-manager-single-app.exe && node ../../../scripts/copy-natives.js win32-x64",
        "__test": "jest",
        "start": "node dist/index.js",
        "precommit": "lint-staged"
    },
    "devDependencies": {
        "lint-staged": "^7.2.0",
        "nexe": "^3.3.7"
    },
    "dependencies": {
        "@appcontainer-node/generic": "^1.37.0-alpha.1",
        "@http-server/generic": "^1.37.0-alpha.1",
        "@package-manager/generic": "^1.37.0-alpha.1",
        "@quantel-http-transformer-proxy/generic": "^1.37.0-alpha.1",
        "@shared/api": "^1.37.0-alpha.1",
        "@shared/worker": "^1.37.0-alpha.1",
        "@shared/workforce": "^1.37.0-alpha.1",
        "underscore": "^1.12.0"
    },
    "peerDependencies": {
        "@sofie-automation/blueprints-integration": "*"
    },
    "prettier": "@sofie-automation/code-standard-preset/.prettierrc.json",
    "engines": {
        "node": ">=12.20.0"
    },
    "lint-staged": {
        "*.{js,css,json,md,scss}": [
            "prettier"
        ],
        "*.{ts,tsx}": [
            "eslint"
        ]
    }
}
